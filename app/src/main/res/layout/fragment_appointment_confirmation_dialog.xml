<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="co.com.lafemmeapp.lafemmeapp.presentation.voucher.dialog.AppointmentConfirmationDialogFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:titleTextColor="@color/white"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <FrameLayout
        android:id="@+id/fm_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/iv_avatar"
            android:layout_width="90dp"
            android:layout_marginTop="15dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_person"
            app:civ_border_width="0dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_our_specialist_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fm_avatar"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="@string/our_specialist_label"
        android:textColor="@color/warmGrey"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/tv_specialist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_our_specialist_title"
        android:gravity="center_horizontal"
        android:text="@string/our_specialist_label"
        android:textColor="@color/warmGrey"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_specialist_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_specialist_name"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="@string/our_specialist_label"
        android:textColor="@color/warmGrey"
        android:textSize="16sp" />


    <Button
        android:id="@+id/btn_accept_appointment_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_specialist_phone_number"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/main_button_rounded_background"
        android:padding="8dp"
        android:text="@string/accept_label"
        android:textColor="#ffffff" />

</RelativeLayout>
