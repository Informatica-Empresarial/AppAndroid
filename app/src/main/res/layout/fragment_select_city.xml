<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="co.com.lafemmeapp.lafemmeapp.presentation.utils.select_city.SelectCityDialogFragment">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:id="@+id/mCLSelectCities"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/mTVTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/select_city_label"
                android:textColor="@color/black"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/mRVCities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/mTVTitle" />




        </android.support.constraint.ConstraintLayout>





    <ProgressBar
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/mPBCities"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mCLSelectCities"
        android:layout_height="wrap_content" />




</android.support.constraint.ConstraintLayout>
